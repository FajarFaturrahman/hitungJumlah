<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/textView1"
        android:text="Menjumlahkan 2 Buah Bilangan"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBil1"
        android:layout_below="@id/textView1"
        android:text="Masukkan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txt_bil1"
        android:layout_below="@id/textViewBil1"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBil2"
        android:layout_below="@id/txt_bil1"
        android:text="Masukkan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txt_bil2"
        android:layout_below="@id/textViewBil2"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHasilBil"
        android:layout_below="@+id/txt_bil2"
        android:text="Hitung Bilangan"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewHasiljml"
        android:layout_below="@id/btnHasilBil"
        android:layout_marginTop="20dp"
        android:text="Hasil Penjumlahan"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_jumlah"
        android:layout_below="@+id/txtViewHasiljml"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>